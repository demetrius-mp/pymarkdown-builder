{
  "python.languageServer": "Pylance",
  "python.formatting.provider": "black",
  "python.linting.enabled": false,
  "python.analysis.typeCheckingMode": "basic",
  "ruff.args": [
    "--config=pyproject.toml"
  ],
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": true,
      "source.organizeImports": true
    },
    "editor.tabSize": 4
  },
  "[markdown]": {
    "editor.tabSize": 4
  },
  "[jsonc]": {
    "editor.tabSize": 2,
  },
  "[yaml]": {
    "editor.autoIndent": "advanced",
    "editor.indentSize": "tabSize",
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "autoDocstring.docstringFormat": "google",
  "autoDocstring.customTemplatePath": ".vscode/autodocstringtemplate.mustache",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "pyproject.toml": "poetry.lock, README.md, .gitignore, mkdocs.yml, .python-version, .readthedocs.yaml, LICENSE, .pre-commit-config.yaml, codecov.yml",
  },
  "files.exclude": {
    ".pytest_cache": true,
    ".ruff_cache": true,
    "**/__pycache__": true,
    ".coverage": true,
    "coverage.xml": true,
  },
  "editor.detectIndentation": false,
}